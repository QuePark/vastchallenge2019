module MessageFilter exposing (messageFilter)

{-| Process the incoming string sent from JavaScript to generate a string that
will be passed back to JavaScript.
-}


messageFilter : String -> String
messageFilter =
    String.lines
        >> List.filter isNotStop
        >> String.join "\n"


isNotStop : String -> Bool
isNotStop line =
    let
        word =
            String.split "," line |> List.head |> Maybe.withDefault ""
    in
    not (List.member word (stopWords ++ misspellStopWords) || String.length word <= 1)


